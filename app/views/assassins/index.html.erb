<div class="container" style="width: 700px;">
  <div class="cards" style="margin-top: 80px;">
    <p><%= link_to "Add a new Assassin", new_assassin_path %></p>
    <% @assassins.each do |assassin| %>
    <div class="card-category">
      <h4><%= link_to assassin.first_name + " " + assassin.last_name, assassin_path(assassin)%></h4>
      <p><%= assassin.summary[0..100] + "..." %></p>
      <p><i class="fas fa-skull-crossbones"></i> <%= assassin.total_kills %></p>
    </div>
    <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

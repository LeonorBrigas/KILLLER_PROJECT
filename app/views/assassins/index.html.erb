<div class="container">
  <div class="row my-5">
    <div class="col-md-5 mb-4">
      <div id="map"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="col-md-7">
      <%= link_to "Add your own Assassin", "new", class: "btn btn-flat-assassins-index" %>
      <% @assassins.each do |assassin| %>
        <div class="card-product mb-5 mt-4">
          <%= image_tag assassin.url %>
          <div class="cards-product-infos p-4">
            <h2><%= link_to assassin.first_name + " " + assassin.last_name, assassin_path(assassin) %></h2>
            <p><%= assassin.summary[0..50] + "..." %></p>
            <p><i class="fas fa-skull-crossbones"></i> <%= assassin.total_kills %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
